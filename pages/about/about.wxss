/* pages/about/about.wxss */
.box{
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  padding:30rpx;
  width:100%;  
  height:100%; 
  display: flex;  
  flex-direction: column;/*纵向*/ 
}
.intro {
  margin: 5rpx 50rpx 0rpx 50rpx;
  font-family: "Lucida Sans";
  color: #212121;
  font-size: 30rpx;
}

.source {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 5rpx 50rpx 5rpx 50rpx;
}

.feedback {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin: 5rpx 50rpx 5rpx 50rpx;
}

.left {
  font-family: "黑体";
  color: #424242;
  font-size: 30rpx;
  width: 200rpx;
}

.right {
  font-family: "Lucida Sans";
  color: #212121;
  font-size: 30rpx;
  width: 300rpx;
}
.line{
  border-bottom: 1rpx solid #888888;
  margin: 10rpx 40rpx 18rpx 40rpx;
}

